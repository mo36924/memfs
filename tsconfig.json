{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ES2017", "dom"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "removeComments": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "sourceMap": false,
    "outDir": "lib",
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["src/__tests__"]
}
